{
    "compilerOptions": {
      "baseUrl": "/",
      "outDir": "./lib/",
      "declaration": true,
      "module": "esnext",
      "target": "es5",
      "lib": ["dom", "esnext"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["cypress", "node"]
    },
    "include": ["src"],
      "exclude": [
      "node_modules", "cypress"
    ]
  }